<Project Sdk="Microsoft.NET.Sdk.WindowsDesktop">

	<PropertyGroup>
		<OutputType>WinExe</OutputType>
		<TargetFramework>netcoreapp3.0</TargetFramework>
		<UseWPF>true</UseWPF>
		<GenerateAssemblyInfo>false</GenerateAssemblyInfo>
		<Platforms>AnyCPU;x64</Platforms>
		<ApplicationManifest>app.manifest</ApplicationManifest>
	</PropertyGroup>

	<ItemGroup>
		<Content Include="assets/*">
			<CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
		</Content>
	</ItemGroup>

	<ItemGroup>
	  <Content Remove="assets\logo.png" />
	</ItemGroup>

	<ItemGroup>
	  <None Remove="icons\favouritesIcon.png" />
	  <None Remove="icons\savedSearchesIcon.png" />
	  <None Remove="logo.png" />
	</ItemGroup>
	
	<ItemGroup>
	  <PackageReference Include="Microsoft.Toolkit.Wpf.UI.Controls" Version="6.1.2" />
	</ItemGroup>
	
	<ItemGroup>
	  <Resource Include="assets\logo.png" />
	  <Resource Include="icons\favouritesIcon.png" />
	  <Resource Include="icons\savedSearchesIcon.png" />
	  <Resource Include="logo.png" />
	</ItemGroup>
	
	<ItemGroup>
	  <Compile Update="Properties\Settings.Designer.cs">
	    <DesignTimeSharedInput>True</DesignTimeSharedInput>
	    <AutoGen>True</AutoGen>
	    <DependentUpon>Settings.settings</DependentUpon>
	  </Compile>
	</ItemGroup>
	
	<ItemGroup>
	  <None Update="Properties\Settings.settings">
	    <Generator>SettingsSingleFileGenerator</Generator>
	    <LastGenOutput>Settings.Designer.cs</LastGenOutput>
	  </None>
	</ItemGroup>

</Project>